<?php
/**
 * Chart textcolor style for dark backgrounds (Justblack palette)
 *
 * Google piechart API: https://developers.google.com/chart/interactive/docs/gallery/piechart
 * #dee2e6 = sass jc-body-color
 */

$view = view('::statistics/other/charts/pie', get_defined_vars());
$new_view = preg_replace('~(position: \'labeled\')~', '$1, textStyle: {color: \'#dee2e6\'}' , $view);

echo $new_view;
